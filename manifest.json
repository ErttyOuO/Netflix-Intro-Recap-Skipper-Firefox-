{
  "manifest_version": 2,
  "default_locale": "zh_TW",
  "name":  "Netflix 片頭片尾自動跳過（Firefox）",
  "description":"一個自動跳過 Netflix 片頭與回顧的 Firefox 擴充功能，本專案原為SafariNflxAutoSkip改寫而成。",
  "version": "1.0.0",
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/*"],
      "js": ["content.js", "toastify.js"],
      "css": ["toastify.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon-48.png",
      "96": "images/icon-96.png"
    }
  },
  "permissions": [],
  "homepage_url": "https://github.com/ErttyOuO/Netflix-Intro-Recap-Skipper-Firefox-",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "109.0"
    }
  }
}
